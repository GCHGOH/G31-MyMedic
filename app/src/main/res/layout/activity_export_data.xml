<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8D0D3D83"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="41dp"
        >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@drawable/memo_detail_title_background2"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Data Export"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:color="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:text="Export as: "
            android:textColor="#ffff"

            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/pdfExportOption"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/export1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ADD8E6"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/pdfText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="PDF"
                        android:textColor="#ffff"
                        android:textSize="19sp" />

                    <ImageView
                        android:id="@+id/exportDataButton"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_above="@+id/pdfText"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/pdf" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/comingSoonButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/comingSoonReLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ADD8E6"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/comingSoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="Coming Soon"
                        android:textColor="#ffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="122dp"
                        android:layout_height="64dp"
                        android:layout_above="@+id/comingSoon"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/coming_soon" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
