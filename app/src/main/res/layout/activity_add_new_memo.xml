<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewMemo">

    <!-- Page Title "New Memo" -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addMemoPageTitle"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:alpha="0.7"
                android:background="@drawable/memo_detail_title_background2"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Add a Memo "
                android:textColor="#040B43"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000000"
                android:paddingTop="10sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"/>

            <EditText
                android:id="@+id/memoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Add title here..."
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textColor="#000000"
                android:paddingTop="10sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                />

            <EditText
                android:id="@+id/memoContent"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:ems="10"
                android:hint="Add content here..."
                android:gravity="start"
                />

            <Button
                android:id="@+id/saveMemoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize = "24sp"
                android:layout_marginTop = "60sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
